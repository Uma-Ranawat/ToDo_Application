<!DOCTYPE html>
<html lang="en">
<head>
 <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>

<!--/ Intro Skew Star /-->
<div id="home" class="intro route bg-image d-flex align-items-center">
  <div class="intro-content display-table">
    <div class="table-cell">
      <div class="container">       

        <br/><br/><br/><br/>
        <div class="signup container-center">
          <div class="title-box-2">
            <h5 class="title-left">
              Create account
            </h5>
          </div>

          <form action="/signup" method="post" role="form" class="contactForm">
            <p>Already have an account? <a href="signin">Sign In</a></p>
            
            <% if ((typeof signupMessage != 'undefined')){ %>
              <div id="sendmessage" class="show"><%= signupMessage %></div>
            <% } %>
            <% if ((typeof signupError != 'undefined')){ %>
              <div id="errormessage" class="show"><%= signupError %></div>
            <% } %>
            <br/>
            <div class="row">
              <div class="col-md-12 mb-3">
                <div class="form-group">
                  <input type="text" name="name" class="form-control" id="name" placeholder="Full Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" value="<%= (typeof req != 'undefined') ? req.name : '' %>" />
                  <% if (typeof validationError != 'undefined' && validationError["context"]["label"] == "name"){ %>
                    <div class="validation show"><%= validationError.message %></div>
                  <% } %>
                </div>
              </div>
              <div class="col-md-12 mb-3">
                <div class="form-group">
                  <input type="email" class="form-control" name="email" id="email" placeholder="Email" data-rule="email" data-msg="Please enter a valid email" value="<%= (typeof req != 'undefined') ? req.email : '' %>" />
                  <% if ((typeof validationError != 'undefined' && validationError["context"]["label"] == "email")){ %>
                    <div class="validation show"><%= validationError.message %></div>
                  <% } %>
                </div>
              </div>
              <div class="col-md-12 mb-3">
                  <div class="form-group">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" data-rule="minlen:8" data-msg="Please enter at least 8 chars of subject" />
                    <% if (typeof validationError != 'undefined' && validationError["context"]["label"] == "password"){ %>
                      <div class="validation show"><%= validationError.message %></div>
                    <% } %>
                  </div>
              </div>
              <div class="col-md-12">
                <button type="submit" class="btn btn-primary btn-color px-4">Sign Up</button>
              </div>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>
<!--/ Intro Skew End /-->


  
<% include ../partials/footer %>
</body>
<% include ../partials/script %>
</html>
